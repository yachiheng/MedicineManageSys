@model MedicineManageSystem.Models.Manage_Account

@{
    ViewBag.Title = "藥品管理者編輯";
}

<h2>藥品管理者編輯</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MamageId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MamageId, new { htmlAttributes = new { @class = "form-control",@readonly="readonly"}})
                @Html.ValidationMessageFor(model => model.MamageId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Manage_Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Manage_Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Manage_Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Manage_Role, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Manage_Role, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Manage_Role, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Manage_authorization, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label class="checkbox-inline">基本功能讀取</label>
                <label class="checkbox-inline"><input type="checkbox" value="C" name="權限" @(Model.Manage_authorization.Contains("C") ? "checked" : "")>新增</label>
                <label class="checkbox-inline"><input type="checkbox" value="U" name="權限" @(Model.Manage_authorization.Contains("U") ? "checked" : "")>修改</label>
                <label class="checkbox-inline"><input type="checkbox" value="D" name="權限" @(Model.Manage_authorization.Contains("D") ? "checked" : "")>刪除</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="編輯" class="btn btn-default" />
            </div>
        </div>
    </div>
}

