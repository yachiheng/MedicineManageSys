@model MedicineManageSystem.Models.Pill_Factory_Category

@{
    ViewBag.Title = "藥廠編輯";
}

<h2>藥廠編輯</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2 control-label">藥廠編號</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.P_pharmaceutical_factory_Id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.P_pharmaceutical_factory_Id, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-2 control-label">藥廠名稱</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.P_pharmaceutical_factory, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.P_pharmaceutical_factory, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="編輯" class="btn btn-default" />
            </div>
        </div>
    </div>
}

