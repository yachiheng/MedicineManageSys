@model MedicineManageSystem.Models.Pill_Factory_Category

@{
    ViewBag.Title = "藥廠新增";
}

<h2>藥廠新增</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        <div class="form-group">
            <div class="col-md-2 control-label">藥廠名稱</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.P_pharmaceutical_factory, new { htmlAttributes = new { @class = "form-control" } })
